            "example": 0
          },
          "titulo": {
            "type": "string",
            "example": "titulo"
          },
          "descricao": {
            "type": "string",
            "example": "descricao"
          },
          "status": {
            "type": "string",
            "enum": [
              "PENDENTE",
              "EM_PROGRESSO",
              "CONCLUIDA"
            ]
          },
          "dataCriacao": {
            "type": "string",
            "example": "2024-05-29T22:39:44.914Z"
          }
        },
        "xml": {
          "name": "tarefa"
        }
      },
      "tarefaAll": {
        "type": "object",
        "properties": {
          "tarefas": {
            "type": "array",
