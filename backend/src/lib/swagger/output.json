              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 0
                },
                "titulo": {
                  "type": "string",
                  "example": "titulo"
                },
                "descricao": {
                  "type": "string",
                  "example": "descricao"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "PENDENTE",
                    "EM_PROGRESSO",
                    "CONCLUIDA"
                  ]
                },
