        "type": "object",
        "properties": {
          "nomeUsuario": {
            "type": "string",
            "example": "string"
          },
          "senha": {
            "type": "string",
            "example": "string"
          }
        },
        "required": [
          "nomeUsuario",
          "senha"
        ],
        "xml": {
          "name": "loginBody"
        }
      },
      "loginResponse": {
        "type": "object",
