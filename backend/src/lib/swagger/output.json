          "titulo",
          "status"
        ],
        "xml": {
          "name": "tarefaCreateBody"
        }
      },
      "tarefaUpdateBody": {
        "type": "object",
        "properties": {
          "titulo": {
            "type": "string",
            "example": "titulo"
          },
          "descricao": {
            "type": "string",
            "example": "descricao"
          },
          "status": {
            "type": "string",
            "enum": [
              "PENDENTE",
              "EM_PROGRESSO",
              "CONCLUIDA"
            ]
          }
        },
        "xml": {
          "name": "tarefaUpdateBody"
        }
      },
