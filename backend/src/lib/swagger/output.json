        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Dados inválidos"
          },
          "details": {
            "type": "object",
            "properties": {
              "nome do campo": {
                "type": "string",
                "example": "o que há de errado com o valor"
              }
            }
          }
        },
        "required": [
          "error",
          "details"
        ],
        "xml": {
          "name": "error400"
        }
      },
